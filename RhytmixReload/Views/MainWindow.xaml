<Window x:Class="RhytmixReload.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RhytmixReload"
        Background="Transparent"
        xmlns:Layout="clr-namespace:RhytmixReload.Views.Layout"
        mc:Ignorable="d"
        
        Title="MainWindow" Height="650" Width="1000" MinHeight="644" MinWidth="426" >

    <Border  Background="White">
        <Grid ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" MinWidth="85"/>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="8*"/>
                </Grid.RowDefinitions>

                <Layout:SearchBar Grid.Column="1" Grid.Row="0" />

                <StackPanel Orientation="Horizontal" Grid.Column="2" Margin="15,0,0,0">
                    <Button Width="45" Height="45" Background="Transparent" BorderBrush="Transparent" Margin="0,0,10,0">
                        <Image Source="/Images/ProfileIcon.png"/>
                    </Button>
                    <TextBlock Text="User167953" VerticalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>


                <Border Grid.Row="0" Grid.Column="0" Width="50" Height="50" CornerRadius="25">
                    <Border.Background>
                        <ImageBrush ImageSource="/Images/RythMixLogo.png" Stretch="Fill"/>
                    </Border.Background>
                </Border>
                
                <Layout:NavigationBar Grid.Column="0" Grid.Row="1"/>
            </Grid>

            <Layout:MusicPlayerBar Grid.Row="1"/>

        </Grid>
    </Border>
</Window>
