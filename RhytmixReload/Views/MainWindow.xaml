<Window x:Class="RhytmixReload.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RhytmixReload"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        xmlns:Layout="clr-namespace:RhytmixReload.Views.Layout"
        mc:Ignorable="d"
        
        Title="MainWindow" Height="650" Width="1000" MinHeight="644" MinWidth="426" >

    <Border CornerRadius="25" Background="White">
        <Grid ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition  MinWidth="80" MaxWidth="80"/>
                <ColumnDefinition Width="15*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Section -->
            <Layout:NavigationBar Grid.Column="0"/>


            <!-- Music Player Section -->
            <Grid Grid.Column="1" ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Layout:SearchBar Grid.Row="0" Grid.Column="0"/>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center">
                    <Button Width="50" Height="50" Background="Transparent" BorderBrush="Transparent">
                        <Image Source="/Images/ProfileIcon.png"/>
                    </Button>
                </StackPanel>
            </Grid>

        </Grid>        
    </Border>

    
</Window>
