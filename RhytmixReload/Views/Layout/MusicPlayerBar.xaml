<UserControl x:Class="RhytmixReload.Views.Layout.MusicPlayerBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RhytmixReload.Views.Layout"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="5">
            <Image Source="/Images/SongImage.jfif" Width="45" Height="45"/>
            <StackPanel Orientation="Vertical" Margin="15,0,0,0">
                <TextBlock Text="Don Toliver" Margin="0,5,0,0" FontSize="15"/>
                <TextBlock Text="Issues" Margin="0,10,0,0" FontSize="11"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center">
            <Button Grid.Row="0"  MaxHeight="20" MaxWidth="20" Background="Transparent" BorderBrush="Transparent" Margin="0,0,15,0">
                <Image Source="/Images/Liked.png"/>
            </Button>
            <Button Grid.Row="0"  MaxHeight="30" MaxWidth="30" Background="Transparent" BorderBrush="Transparent" Margin="0,0,15,0">
                <Image Source="/Images/PreviousSong.png"/>
            </Button>
            <Button Grid.Row="0"  MaxHeight="30" MaxWidth="30" Background="Transparent" BorderBrush="Transparent" Margin="0,0,15,0">
                <Image Source="/Images/Pause.png"/>
            </Button>
            <Button Grid.Row="0" MaxHeight="30" MaxWidth="30" Background="Transparent" BorderBrush="Transparent">
                <Image Source="/Images/NextSong.png"/>
            </Button>
        </StackPanel>

        <Grid Grid.Column="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="00:00" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0"/>
            <Slider Grid.Column="1" VerticalAlignment="Center" Margin="10,0,10,0"/>
            <TextBlock Text="04:35" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="2"/>
        </Grid>

        <Grid Grid.Column="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="45"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Image Source="/Images/Volume.png" Grid.Column="0" Width="25" Height="25" HorizontalAlignment="Center" Margin="0,0,5,0"/>
            <Slider Grid.Column="1" VerticalAlignment="Center"/>
        </Grid>

    </Grid>
</UserControl>
